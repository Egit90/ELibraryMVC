@model List<Product>

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="row pt-4 pb-2">
            <div class="col-6">
                <h2 class="text-primary">Product List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Product
                </a>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>List Price</th>
                <th>Price</th>
                <th>50+ Price</th>
                <th>100+ Price</th>
                <th></th>
            </tr </thead>
        <tbody>
            @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.Title</td>
                    <td>@cat.Author</td>
                    <td>@cat.Description</td>
                    <td>@cat.ISBN</td>
                    <td>@cat.ListPrice</td>
                    <td>@cat.Price</td>
                    <td>@cat.Price50</td>
                    <td>@cat.Price100</td>
                    <td>
                        <div class="d-flex align-items-center justify-content-between" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-Id="@cat.Id"
                                class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id="@cat.Id"
                                class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>