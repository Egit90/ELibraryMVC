@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Title"></label>
            <input disabled asp-for="Title" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Author"></label>
            <input disabled asp-for="Author" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <input disabled asp-for="Description" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="ISBN"></label>
            <input disabled asp-for="ISBN" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="ListPrice"></label>
            <input disabled asp-for="ListPrice" type="number" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Price"></label>
            <input disabled asp-for="Price" type="number" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Price50"></label>
            <input disabled asp-for="Price50" type="number" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Price100"></label>
            <input disabled asp-for="Price100" type="number" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Cancel</a>
            </div>
        </div>
    </div>
</form>
